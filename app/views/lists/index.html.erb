<%= render(partial: 'lists/navbar') %>

<h2>Lists </h2>

<% if @lists.any? %>
  <ul>
    <% @lists.each do |list| %>
    <li>
    <%= link_to list.title, list_path(list) %>
    <%= link_to list.description, list_path(list) %>
    </li>
    <% end %>
  </ul>
  <% else %>
  <h3>No Lists!</h3><br>
  <%= link_to 'Add List', new_list_path %>
<% end %>

<hr />


<%= link_to 'Back', root_path %>