<%= render(partial: 'lists/navbar') %>


<h2><%= @list.title %> items: </h2>
<hr />

<% if @items.any? %>
  <ul>
    <% @items.each do |item| %>
      <li>
        <%= link_to item.title, list_item_path(@list, item) %>
      </li>
      <% end %>
  </ul>
<% else %>
  <h3>This list doesn't have any items!</h3>
<% end %>

<hr />

<%= link_to 'Add Item', new_list_item_path %> |

<%= link_to 'All Honey-Dew Lists', lists_path %>
