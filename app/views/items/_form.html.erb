<%= form_for [@list, @item], :html => { :multipart => true } do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <% if @item.persisted? %> 
    <%= f.label :complete %>
    <%= f.check_box :complete %>
  <% end %>

  <% if @item.persisted? %>
    <%= f.label :assigned %>
    <%= f.check_box :assigned %>
  <% end %>

  <%= f.submit %>
<% end %>

